@model DiabetesPredictor.Web.Characteristics

@{
    ViewData["Title"] = "Edit";
}



<h4> Edit Personal Features</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Pregnancies" class="control-label"></label>
                <input asp-for="Pregnancies" class="form-control" />
                <span asp-validation-for="Pregnancies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Glucose" class="control-label"></label>
                <input asp-for="Glucose" class="form-control" />
                <span asp-validation-for="Glucose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressure" class="control-label"></label>
                <input asp-for="BloodPressure" class="form-control" />
                <span asp-validation-for="BloodPressure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkinThickness" class="control-label"></label>
                <input asp-for="SkinThickness" class="form-control" />
                <span asp-validation-for="SkinThickness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insulin" class="control-label"></label>
                <input asp-for="Insulin" class="form-control" />
                <span asp-validation-for="Insulin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bmi" class="control-label"></label>
                <input asp-for="Bmi" class="form-control" />
                <span asp-validation-for="Bmi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiabetesPedigreeFunction" class="control-label"></label>
                <input asp-for="DiabetesPedigreeFunction" class="form-control" />
                <span asp-validation-for="DiabetesPedigreeFunction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <br />
          
            <div class="form-group">
                <input type="submit" value="Save " class="btn btn-success" style="width:100px" />
            </div>
        </form>
    </div>

</div>
<br />

<div>
    <a class="btn btn-primary" asp-action="Index">Back to Summary</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
